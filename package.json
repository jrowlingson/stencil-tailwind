{
  "name": "stencil-tailwind",
  "version": "0.0.6",
  "description": "A TailwindCSS Plugin for Stencil",
  "main": "dist/index.js",
  "directories": {
    "test": "test"
  },
  "keywords": [
    "stencil",
    "tailwind"
  ],
  "scripts": {
    "build": "rollup -c && cp ./src/app.css ./dist/",
    "test": "ava",
    "debug": "export DEBUG=* DEBUG_COLORS=true FORCE_COLOR=1 && npm run build && ava"
  },
  "author": "",
  "license": "MIT",
  "peerDependencies": {
    "rollup": "^2.10.2",
    "typescript": ">= 2.1.0"
  },
  "dependencies": {
    "acorn-walk": "^8.0.2",
    "chalk": "^4.0.0",
    "debug": "^4.3.1",
    "magic-string": "^0.25.7",
    "postcss": "^8.2.6",
    "tailwindcss": "^2.0.0"
  },
  "devDependencies": {
    "@rollup/plugin-typescript": "^8.2.0",
    "@types/acorn": "^4.0.5",
    "@types/debug": "^4.1.5",
    "ava": "^5.2.0",
    "rollup": "^2.40.0",
    "ts-node": "^9.1.1",
    "tslib": "^2.1.0",
    "typescript": "^4.2.2"
  },
  "ava": {
    "extensions": [
      "ts"
    ],
    "require": [
      "ts-node/register"
    ],
    "files": [
      "!**/fixtures/**",
      "!**/helpers/**",
      "!**/recipes/**",
      "!**/types.ts"
    ]
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/jrowlingson/stencil-tailwind.git"
  },
  "module": "dist/index.es.js",
  "types": "types/index.d.ts"
}
